{
  "rootDir": "../..",
  "setupFilesAfterEnv": ["./test/e2e/init.js"],
  "testEnvironment": "node",
  "reporters": ["<rootDir>/runners/jest/streamlineReporter", "<rootDir>/test/node_modules/jest-junit"],
  "verbose": true,
  "bail": false,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!**/__test/**",
    "!**/__mocks__/**",
    "!**/*.mock.js",
    "!**/*.test.js"
  ],
  "coverageDirectory": "test/coverage",
  "coverageReporters": ["lcov", "html"]
}
